<?xml version="1.0" encoding="UTF-8"?>
<proxy name="buffer-member-consumer" startOnLoad="true" transports="jms" xmlns="http://ws.apache.org/ns/synapse">
    <target>
        <inSequence>
            <log level="custom">
                <property expression="json-eval($)" name="buffer-member-consumer payload"/>
                <property expression="$trp:custom" name="HEADER-1"/>
            </log>
            <property name="SET_ROLLBACK_ONLY" scope="axis2" type="STRING" value="true"/>
            <call blocking="true">
                <endpoint>
                    <http method="post" uri-template="http://10.42.65.95:8080/v1/buffer-members">
                        <suspendOnFailure>
                            <initialDuration>-1</initialDuration>
                            <progressionFactor>-1</progressionFactor>
                            <maximumDuration>0</maximumDuration>
                        </suspendOnFailure>
                        <markForSuspension>
                            <retriesBeforeSuspension>0</retriesBeforeSuspension>
                        </markForSuspension>
                    </http>
                </endpoint>
            </call>
            <loopback/>
        </inSequence>
        <outSequence>
            <log level="custom">
                <property expression="get-property('MessageID')" name="MESSAGE_ID"/>
            </log>
            <property name="messageType" scope="axis2" type="STRING" value="application/json"/>
            <send/>
        </outSequence>
        <faultSequence>
            <property name="SET_ROLLBACK_ONLY" scope="axis2" type="STRING" value="true"/>
        </faultSequence>
    </target>
    <parameter name="transport.jms.DestinationType">queue</parameter>
    <parameter name="redeliveryPolicy.maximumRedeliveries">10</parameter>
    <parameter name="transport.jms.Destination">buffer-member-queue1</parameter>
    <parameter name="transport.jms.ConcurrentConsumers">30</parameter>
    <parameter name="transport.jms.ReplyDestination">buffer-member-queue1-response</parameter>
    <parameter name="transport.jms.ContentType">
        <rules>
            <jmsProperty>contentType</jmsProperty>
            <default>application/json</default>
        </rules>
    </parameter>
    <parameter name="transport.jms.ConnectionFactory">myQueueConnectionFactory</parameter>
    <parameter name="transport.jms.MaxConcurrentConsumers">30</parameter>
</proxy>
